<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".CurriculumActivity">



    <TextView
        android:id="@+id/branch1_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Branch"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        />

    <Spinner
        android:id="@+id/branch_spineer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/sem1_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Semester"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        />

    <Spinner
        android:id="@+id/sem_spineer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/ser1_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select service"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textColor="#000000"
        />

    <Spinner
        android:id="@+id/servicess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:hint="Enter File/Subject Name"
        android:textColorHint="#000000"
        android:layout_marginTop="15dp"
        />

    <Button
        android:id="@+id/uploadPDf"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload PDF"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:background="@drawable/btn_design_myaccount"
        />

    <Button
        android:id="@+id/viewSyllabus"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Files"
        android:textSize="23sp"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:background="@drawable/btn_design_myaccount"
        android:onClick="btnViewSyllabus"
        />


    <androidx.cardview.widget.CardView
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Result"
                    android:textAlignment="center"
                    android:textSize="22sp"
                    android:id="@+id/txt_result"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="20dp"
                    />

                <ListView
                    android:id="@+id/myListView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txt_result"
                    android:padding="20dp"
                    android:layout_marginTop="5dp"
                    />


            </LinearLayout>

        </ScrollView>



    </androidx.cardview.widget.CardView>

</LinearLayout>